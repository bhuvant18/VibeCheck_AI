# VibeCheck Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# AUTHENTICATION (Choose ONE option)
# ===========================================

# Option A: Google Cloud / Vertex AI (Recommended for ADK)
# Run: gcloud auth application-default login
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# Option B: Google AI Studio API Key
# Get your key at: https://aistudio.google.com/apikey
# GEMINI_API_KEY=your-api-key-here

# ===========================================
# API CONFIGURATION
# ===========================================

# Backend server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Frontend API connection
VIBECHECK_API_URL=http://localhost:8000

# ===========================================
# MODEL SETTINGS (Optional)
# ===========================================

# Model to use (default: gemini-2.0-flash-exp)
# MODEL_ID=gemini-2.0-flash-exp
